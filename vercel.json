{
  "builds": [
    {
      "src": "api/og.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/product/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*(facebookexternalhit|whatsapp|telegrambot|twitterbot|slackbot|discordbot|googlebot|bingbot|linkedinbot|skypeuripreview).*"
        }
      ],
      "destination": "/api/og?id=:id"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
