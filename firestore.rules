
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Funções Auxiliares ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email in [
        "filipe_coval_90@hotmail.com", 
        "mcpoleca@gmail.com", 
        "filipe@teste.com"
      ];
    }

    // --- Regras das Coleções ---

    match /products_inventory/{docId} {
      allow read, write: if isAdmin();
    }

    match /products_public/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /reviews/{docId} {
      allow get, list, create: if true;
      allow update, delete: if isAdmin();
    }
    
    match /coupons/{docId} {
      allow get, list: if true;
      allow create: if isAdmin() || (isSignedIn() && request.resource.data.code.matches('REWARD-.*'));
      allow update, delete: if isAdmin();
    }

    match /newsletter_subscriptions/{docId} {
      allow create: if true;
      allow read, write, delete: if isAdmin();
    }

    // --- CORREÇÃO APLICADA AQUI ---
    // A regra foi dividida para permitir explicitamente a criação de perfil.
    match /users/{userId} {
      // Utilizadores podem ler e alterar o seu próprio perfil. Admins podem gerir todos.
      allow get, update, delete: if request.auth.uid == userId || isAdmin();
      // Um utilizador autenticado pode CRIAR o seu próprio perfil de utilizador.
      allow create: if request.auth.uid == userId || isAdmin();
    }

    match /orders/{orderId} {
      allow create: if true;
      allow list: if isSignedIn() || isAdmin();
      allow get: if isAdmin() || 
                   (isSignedIn() && resource.data.userId == request.auth.uid) ||
                   (isSignedIn() && resource.data.shippingInfo.email == request.auth.token.email && resource.data.userId == null);
      allow update: if isAdmin() ||
                     (isSignedIn() && 
                      request.auth.uid == resource.data.userId &&
                      request.resource.data.status == 'Cancelado' &&
                      resource.data.status in ['Processamento', 'Pago']);
      allow delete: if isAdmin();
    }

    match /stock_alerts/{alertId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }
    
    match /online_users/{sessionId} {
      allow write: if true;
      allow read: if isAdmin();
    }
  }
}
