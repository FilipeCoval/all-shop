
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email in [
        "filipe_coval_90@hotmail.com", 
        "mcpoleca@gmail.com", 
        "filipe@teste.com"
      ];
    }

    // --- Collections Rules ---

    // Publicly readable collections. No auth required.
    match /products_inventory/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    match /reviews/{docId} {
      allow get, list, create: if true;
      allow update, delete: if isAdmin();
    }
    match /coupons/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // User-specific data
    match /users/{userId} {
      // A user can read/write their own document.
      allow read, write: if request.auth.uid == userId;
    }

    match /orders/{orderId} {
      allow create: if true;
      
      // Users can get their own orders, admins can get any.
      allow get: if (request.auth.uid == resource.data.userId) || isAdmin();
      
      // Users can query for their own orders. Admins can query for all.
      // Firestore's security rules will enforce that a user's query must include `where('userId', '==', request.auth.uid)`.
      allow list: if isSignedIn();
      
      // Only admins can update or delete.
      allow update, delete: if isAdmin();
    }

    // Other collections
    match /stock_alerts/{alertId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }
    match /online_users/{sessionId} {
      allow write: if true; // Anyone can update their own session
      allow read: if isAdmin();
    }
  }
}
