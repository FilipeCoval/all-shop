
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email in [
        "filipe_coval_90@hotmail.com", 
        "mcpoleca@gmail.com", 
        "filipe@teste.com"
      ];
    }

    // --- Collections Rules ---

    // SECURED: Inventory should only be readable by admins to protect costs.
    match /products_inventory/{docId} {
      allow read, write: if isAdmin();
    }

    // PUBLIC: Products must be readable by everyone for the store to work.
    // Writing is restricted to admins (via the dashboard).
    match /products_public/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /reviews/{docId} {
      allow get, list, create: if true;
      allow update, delete: if isAdmin();
    }
    
    match /coupons/{docId} {
      allow get, list: if true;
      allow create: if isAdmin() || (isSignedIn() && request.resource.data.code.matches('REWARD-.*'));
      allow update, delete: if isAdmin();
    }

    // Allows ANYONE (even unauthenticated) to create a subscription.
    // Reading is still protected for admins.
    match /newsletter_subscriptions/{docId} {
      allow create: if true;
      allow read, write, delete: if isAdmin();
    }

    // User-specific data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /orders/{orderId} {
      allow create: if true;
      allow get: if isAdmin() || (request.auth.uid == resource.data.userId);
      allow list: if isAdmin() || (isSignedIn() && request.query.where.get('userId') == request.auth.uid);
      allow update: if isAdmin() || (request.auth.uid == resource.data.userId);
      allow delete: if isAdmin();
    }

    // Other collections
    match /stock_alerts/{alertId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }
    match /online_users/{sessionId} {
      allow write: if true; // Anyone can update their own session
      allow read: if isAdmin();
    }
  }
}
